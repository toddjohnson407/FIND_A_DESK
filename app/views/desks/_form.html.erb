<center>
<body style="color: white; background: url('<%= cl_image_path('background') %>')">
  <div class="container" style="margin-top: 3vh;">
    <h1 style="margin-bottom: 4vh;">Promote your workspace - be creative </h1>
    <%= simple_form_for(@desk) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name , as: :string%> <br> <br> <br> <br>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :rate, as: :select, collection: Rate.all.map(&:pricing)  %>
        <%= f.input :capacity %>
        <%= f.input :address %>
      </div>

      <div class="form-inputs">
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-treehouse" %>
      </div>
    <% end %>
  </div>
</body>
</center>
