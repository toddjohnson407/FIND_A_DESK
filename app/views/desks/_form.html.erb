
<body class="bg-info">
  <div class="container" style="margin-top: 3vh;">
    <h1 style="margin-bottom: 4vh;">Promote your workspace - be creative </h1>
    <%= simple_form_for(@desk) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name, placeholder: "What's the name?" %>
        <%= f.input :description, placeholder: "Give it a little description, make it tasty!" %>
        <%= f.input :price, placeholder: "4â‚¬ per hour"%>
        <%= f.input :address, placeholder: "R. Moeda 7, 1200-109 Lisboa" %>
      </div>

      <div class="form-inputs">
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-treehouse" %>
      </div>
    <% end %>
  </div>
</body>
