<div class="container">
  <div class="row">
      <% @desks.each do |desk| %>
      <% if desk.user_id == current_user.id %>
    <div class="col-xs-12 col-sm-6 col-md-4">

      <div class="card">
        <div class="front">
          <img src=<%= cl_image_path desk.photo %>>
          <div class="caption">
            <h2><%=desk.name%></h2>
            <% if desk.rate.nil? %>
              <%= puts 'working' %>
              <h6><%=desk.price%>€</h6>
              <p><%= desk.description[0,30] %>... <br>
                <%= desk.price %>€<br>
                <%= desk.address %></p>
            <% else %>
              <h6><%=desk.price%>€      <%=desk.rate.pricing%></h6>
              <p><%= desk.description[0,30] %>... <br>
                <%= desk.price %>€ <%=desk.rate.pricing%><br>
                <%= desk.address %></p>
            <% end %>

            <a href="#"><%= link_to "", desk_path(desk)%></a>
          </div>
        </div>
      </div>

    </div>
      <% end %>
      <% end %>
  </div>
