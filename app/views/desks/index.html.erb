<h1 class="text-center" style="margin-bottom: 4vh;">Desk Results</h1>
<div class="container">
  <div class="row">

    <div class="col-xs-12 col-sm-6 col-md-8">
      <div class="row">
        <% @desks.each do |desk| %>
          <div class="col-xs-12 col-sm-12 col-md-6">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path desk.photo %>');">
              <div class="card-category"></div>
              <div class="card-description">
                <h2><%= desk.name %></h2>
                <p><%= desk.description %></p>
                <p>$ <%= desk.price %></p>
                <p><%= desk.address %></p>
              </div>
              <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
              <a class="card-link" <%= link_to "", desk_path(desk)%> </a>
            </div>
          </div>
        <% end %>
    </div>

    </div>
    <div class="col-xs-12 col-md-8 card">
      <div id="map" style="width: 100%; height: 600px" data-markers="<%= @markers.to_json %>"></div>
    </div>
  </div>
